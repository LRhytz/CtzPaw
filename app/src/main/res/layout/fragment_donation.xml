<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CitizenDonationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Donation"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- SearchView for filtering -->
        <SearchView
            android:id="@+id/searchViewDonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:iconifiedByDefault="false"
            android:queryHint="Search donations..." />

        <!-- ListView -->
        <ListView
            android:id="@+id/listViewDonations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/searchViewDonations"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/buttonAddDonation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="Add Donation Request" />

    </RelativeLayout>

</FrameLayout>
