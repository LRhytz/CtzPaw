<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".OrgDashboardActivity">

    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Org_bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Org_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/org_lightGreen"
        app:itemIconTint="@color/org_darkGreen"
        app:itemTextColor="@color/org_darkGreen"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/org_nav_menu"
        app:itemTextAppearanceActive="@style/CustomBottomNavigationItem"
        app:itemTextAppearanceInactive="@style/CustomBottomNavigationItem" />

</RelativeLayout>
